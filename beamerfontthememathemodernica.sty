\RequirePackage{polyglossia}
\RequirePackage{unicode-math}
\RequirePackage[sfdefault]{noto}

\setdefaultlanguage[variant=us]{english}
% \setmainfont{LinBiolinum}
\setmainfont{NotoSans}

\mode<presentation>{\beamer@suppressreplacementstrue}

\usefonttheme{structurebold}

\AtBeginDocument{\newfontfamily\titlefont{NotoSans}}

\setbeamerfont{title}{size=\Large,series=\titlefont}
\setbeamerfont{subtitle}{size=\Large,series=\normalfont}
\setbeamerfont{date}{size=\footnotesize,series=\titlefont}
\setbeamerfont{author}{size=\footnotesize,series=\normalfont}
\setbeamerfont{institute}{size=\tiny,series=\normalfont}
\setbeamerfont{frametitle}{size=\huge,shape=\scshape}
\setbeamerfont{framesubtitle}{size=\footnotesize}
\setbeamerfont{footline}{size=\tiny}

\mode<all>
